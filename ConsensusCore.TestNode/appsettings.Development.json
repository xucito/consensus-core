{
  "Logging": {
    "Console": {
      "LogLevel": {
        "Default": "Information",
        "System": "Error",
        "Microsoft": "Error"
      }
    },
    "File": {
      "LogLevel": {
        "Default": "Debug",
        "System": "Warning",
        "Microsoft": "Warning"
      }
    }
  },
  "AllowedHosts": "*",
  "Cluster": {
    //"NodeUrls": "https://localhost:5021,https://localhost:5022,https://localhost:5023",
    "NodeUrls": "https://localhost:5021",
    //"NodeUrls": [ "https://localhost:5021", "https://localhost:5022" ],
    "MinimumNodes": 1,
    "ElectionTimeoutMs": 5000,
    "LatencyToleranceMs": 3000,
    "DataTransferTimeoutMs": 30000,
    "NumberOfShards": 1,
    "TestMode": false,
    "SnapshottingInterval": 20,
    "SnapshottingTrailingLogCount": 10,
    "ShardRecoveryValidationCount": 10,
    "DebugMode": true,
    "MetricsIntervalMs":  5000
  },
  "Node": {
    "Name": "Test",
    "EnableLeader": true,
    //Used for testing
    "AlwaysPrimary": false,
    "EnablePerformanceLogging": false,
    "PersistWriteQueue": true
  }
}
