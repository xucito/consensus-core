{
  "Logging": {
    "Console": {
      "LogLevel": {
        "Default": "Information",
        "System": "Critical",
        "Microsoft": "Critical"
      }
    },
    "File": {
      "LogLevel": {
        "Default": "Warning",
        "System": "Warning",
        "Microsoft": "Warning"
      }
    }
  },
  "AllowedHosts": "*",
  "Cluster": {
    "NodeUrls": "https://localhost:5021,https://localhost:5022,https://localhost:5023",
    //"NodeUrls": "https://localhost:5021",
    //"NodeUrls": [ "https://localhost:5021", "https://localhost:5022" ],
    "MinimumNodes": 2,
    "ElectionTimeoutMs": 3000,
    "LatencyToleranceMs": 1000,
    "DataTransferTimeoutMs": 30000,
    "NumberOfShards": 1,
    "TestMode": false,
    "SnapshottingInterval": 200,
    "SnapshottingTrailingLogCount": 100,
    "ShardRecoveryValidationCount": 100,
    "DebugMode": true,
    "MetricsIntervalMs":  5000
  },
  "Node": {
    "Name": "Test",
    "EnableLeader": true,
    //Used for testing
    "AlwaysPrimary": false,
    "EnablePerformanceLogging": false,
    "PersistWriteQueue": true,
    "DeletionCacheSize": 50,
    "StaleDataTrailingLogCount":  50
  }
}
